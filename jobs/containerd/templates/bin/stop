#!/usr/bin/env bash
set -eu

# shellcheck disable=SC1091
source /var/vcap/jobs/containerd/bin/envs

log() {
  local msg
  local time

  msg=$1
  time=$(date +"%e/%m/%Y - %T")

  echo "$time $msg" >> "${CONTAINERD_LOG_DIR}/containerd_ctl.log"
}

log "stopping containerd"
kill "$( cat "$CONTAINERD_PID_FILEPATH" )"
rm -f "$CONTAINERD_PID_FILEPATH"
